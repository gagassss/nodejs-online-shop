<div class="row justify-content-center">
    <div class="col-md-8 col-md-offset-2">
        <h1>User profile</h1>
        <hr>
        <h2>My orders</h2>
        {{# each orders}}
            <div class="card text-center mb-4 mt-4 ">
                <div class="card-body">
                    <ul class="list-group">
                        {{#each this.items }}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{this.item.title}} | {{this.qty}} Unit(s)
                                <span class="badge badge-dark badge-pill">{{this.price}}</span>
                            </li>
                        {{/each}}
                    </ul>
                </div>

                <div class="card-footer text-muted"><strong>${{this.cart.totalPrice}}</strong> </div>
            </div>
        {{/each}}
    </div>
</div>