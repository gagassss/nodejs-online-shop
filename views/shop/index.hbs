<div class="row mt-5 justify-content-center">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success {{#if noMessages}} d-none {{/if}}">
            {{successMsg}}
        </div>
    </div>
</div>

{{#each data }}
    <div class="row mt-5">
        {{# each this}} 
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <img src="{{this.imagePath}}" height="450px" class="card-img-top img-responsive">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="font-weight-bold">${{this.price}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-success">Add to Shopping Cart</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}